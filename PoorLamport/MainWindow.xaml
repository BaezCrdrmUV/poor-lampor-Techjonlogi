        <TextBox x:Name="mensaje3Tiempo" HorizontalAlignment="Left" Height="23" Margin="650,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="mensaje3" HorizontalAlignment="Left" Height="23" Margin="650,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <Button x:Name="btn1" Content="Enviar" HorizontalAlignment="Left" Margin="110,307,0,0" VerticalAlignment="Top" Width="75" Click="enviarMensaje1"/>
        <Button x:Name="btn3" Content="Enviar" HorizontalAlignment="Left" Margin="680,321,0,0" VerticalAlignment="Top" Width="75" Click="enviarMensaje3"/>
        <Button x:Name="btn2" Content="Enviar" HorizontalAlignment="Left" Margin="400,307,0,0" VerticalAlignment="Top" Width="75" Click="enviarMensaje2"/>
        
        <ListBox x:Name="proceso1Mensajes" HorizontalAlignment="Left" Height="126" Margin="44,387,0,0" VerticalAlignment="Top" Width="189"/>
        <ListBox x:Name="proceso3Mensajes" HorizontalAlignment="Left" Height="126" Margin="581,387,0,0" VerticalAlignment="Top" Width="189"/>
        <ListBox x:Name="proceso2Mensajes" HorizontalAlignment="Left" Height="126" Margin="310,387,0,0" VerticalAlignment="Top" Width="189"/>
